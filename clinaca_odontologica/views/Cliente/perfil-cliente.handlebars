<link rel="stylesheet" href="../../css/perfil.css">
<br><br>
<div class="container mt-4">


    <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
        <button class="btn btn-primary menu-btn" id="ButaoEditarInformacoes">Informações Pessoais</button>
        <button class="btn btn-primary menu-btn" id="ButaoEditarContatos">Contatos</button>
        <button class="btn btn-primary menu-btn" id="ButaoSenha">Senha</button>
    </div>
</div>


<br><br>


    <!-- ALTERAR SENHA -->
<div id="EditarSenhaCliente" class="card mx-auto mb-4" style="max-width:600px; display:none;">
    <div class="card-body">
        <h2 class="card-title text-center mb-3">Alterar Senha</h2>
        <form action="/EditarSenhaCliente" method="post">
            <div class="mb-3">
                <label class="form-label">Senha Atual:</label>
                <input type="password" name="senhaAtual" class="form-control" placeholder="Digite sua senha atual" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Nova Senha:</label>
                <input type="password" name="novaSenha" class="form-control" placeholder="Digite sua nova senha" required minlength="4">
            </div>
            <div class="mb-3">
                <label class="form-label">Confirme a Nova Senha:</label>
                <input type="password" name="confirmarNovaSenha" class="form-control" placeholder="Confirme sua nova senha" required minlength="4">
              
                <div id="erroSenha" class="text-danger mt-1" style="display:none;"></div>
            </div>
            <button type="submit" class="btn btn-success w-100">Alterar Senha</button>
        </form>
    </div>
</div>



    <!-- EDITAR INFORMAÇÕES PESSOAIS -->
    <div id="EditarInformacoesPessoaisCliente" class="card mx-auto mb-4" style="max-width:600px; display:none;">
        <div class="card-body">
            <form action="/EditarInformacoesPessoaisCliente" method="post">
                <h2 class="card-title text-center mb-3">Informações Pessoais</h2>
                <div class="mb-3">
                    <label class="form-label">CPF:</label>
                    <input type="text" name="cpf" class="form-control" value="{{ClienteEncontrado.cpf}}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Endereço:</label>
                    <input type="text" name="endereco" class="form-control" value="{{ClienteEncontrado.endereco}}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Data de Nascimento:</label>
                    <input type="date" name="data_nascimento" class="form-control" value="{{ClienteEncontrado.data_nascimento}}">
                </div>
                <div class="mb-3">
                    <label class="form-label">Sexo:</label>
                    <input type="text" name="sexo" class="form-control" value="{{ClienteEncontrado.sexo}}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Nome:</label>
                    <input type="text" name="nome" class="form-control" value="{{ClienteEncontrado.nome}}" required>
                </div>
                <button type="submit" class="btn btn-success w-100">Editar Informações Pessoais</button>
            </form>
        </div>
    </div>

    <!-- EDITAR CONTATOS -->
    <div id="EditarContatosCliente" class="card mx-auto mb-4" style="max-width:600px; display:none;">
        <div class="card-body">
            <h2 class="card-title text-center mb-3">Editar Contatos</h2>
            <form action="/EditarContatosCliente" method="post">
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" name="email" class="form-control" value="{{ClienteEncontrado.email}}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Telefone:</label>
                    <input type="tel" name="telefone" class="form-control" value="{{ClienteEncontrado.telefone}}" required>
                </div>
                <button type="submit" class="btn btn-success w-100">Editar Contatos</button>
            </form>
        </div>
    </div>

</div>

<script src="../../js/clientes/Perfil.js"></script>