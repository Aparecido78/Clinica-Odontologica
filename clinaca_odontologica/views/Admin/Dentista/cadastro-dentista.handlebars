<link rel="stylesheet" href="../../css/admin/cadastroDentista.css">

<main>

    <h1>Cadastro de Dentista</h1>

    <form action="/CadastroDentista" method="post" class="form-box needs-validation" novalidate>

        <label>Nome:</label>
        <input type="text" name="nome" placeholder="Digite o nome" required>
        <div class="invalid-feedback">Nome é obrigatório.</div>

        <label>Email:</label>
        <input type="email" name="email" placeholder="Digite o email" required>
        <div class="invalid-feedback">Email inválido.</div>

        <label>Senha:</label>
        <input type="password" name="senha" placeholder="Crie uma senha" required minlength="4">
        <div class="invalid-feedback">Senha com no mínimo 4 caracteres.</div>

        <label>Telefone:</label>
        <input type="tel" name="telefone" placeholder="Digite o telefone" required>
        <div class="invalid-feedback">Telefone é obrigatório.</div>

        <label>CPF:</label>
        <input type="text" name="cpf" placeholder="Digite o CPF" required>
        <div class="invalid-feedback">CPF é obrigatório.</div>

        <label>Endereço:</label>
        <input type="text" name="endereco" placeholder="Digite o endereço" required>
        <div class="invalid-feedback">Endereço é obrigatório.</div>

        <label>Data de Nascimento:</label>
        <input type="date" name="data_nascimento" required>

        <label>Sexo:</label>
        <select name="sexo" required>
            <option value="">Selecione</option>
            <option value="masculino">Masculino</option>
            <option value="feminino">Feminino</option>
            <option value="outro">Outro</option>
        </select>

        <button type="submit" class="botao-cadastrar">Cadastrar</button>
    </form>

 

</main>
